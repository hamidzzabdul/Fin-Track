generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  email     String    @unique
  password  String
  income    Income[]
  expense   Expense[]
  createdAt DateTime  @default(now())
  updateUt  DateTime  @updatedAt
  Session   Session[]
}

model Income {
  id        String   @id @default(uuid())
  name      String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Expense {
  id        String   @id @default(uuid())
  name      String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Category {
  id   String @id @default(uuid())
  name String @unique
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  expiresAt    DateTime
}
